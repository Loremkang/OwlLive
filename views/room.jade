extends layout
block append head
	script(src="javascripts/room.js")
	link(rel='stylesheet', href='/stylesheets/room.css')

	
block content
	div.container
		h1 Room #{room}
		div.well
			form.form-inline(role='form',method='post',action='api/sendmessage')
				input(type='hidden',name='room',value='#{room}')
				div.form-group
					label Send Message
					span
						input.form-control(name='message')
					span 
						button.btn.btn-default(type='submit') Send
		div#messageField
			The first Message...
	script loadXMLDoc("#{room}")
